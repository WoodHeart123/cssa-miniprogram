
.name-page {
		background-color: #fff;
		width: 100vw;
		height: 100vh;
}
.title {
		font-size: 20px;
		font-weight: 700;
		text-align: center;
		padding-top: 20px;
		margin-bottom: 50px;
}
.id-input {
		width: 80%;
		border-bottom: 1px solid #CCC;
		padding-bottom: 2px;
		margin-left: 10%;
		margin-bottom: 20px;
}
.button-box {
		display: flex;
		flex-direction: row;
		justify-content: center;
		width: 90%;
		margin-left: 5%;
}
.confirm-button {
		width: 80%;
		height: 36px;
		border-radius: 18px;
		border: 0 !important;
		background-color: #1684FC;
		display: flex;
		justify-content: center;
		font-size: 14px;
}
