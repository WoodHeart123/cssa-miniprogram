
#post-comment {
		height: 100vh;
		width: 100vw;
		background-color: white;
}
.comment-form {
		padding: 15px;
		width: calc(100vw - 30px);
}
.title {
		margin-top: 2vh;
		height: 5vh;
		line-height: 5vh;
		margin-bottom: 2vh;
		font-size: 18px;
		font-weight: 700;
		text-overflow: ellipsis;
		white-space: nowrap;
		overflow: hidden;
}
.button {
		background-color: #1684FC !important;
		color: white !important;
		margin-top: 10px;
}
.box {
		align-items: center;
}
.input {
		min-height: 200px;
}
.blank {
		margin-top:20px;
		height: 1px;
		background-color: #f5f5f5;
		margin-bottom: 22px;
}
