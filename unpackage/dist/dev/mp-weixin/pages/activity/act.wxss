
#act {
		display: flex;
}
.avatar-box {
		width: 100vw;
		height: 50px;
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
}
.button {
		margin: 20px 10px 20px 10px;
		border-radius: 10px;
		border: 1px solid #AAAAAA;
		background-color: #1684FC;
		color: white;
}
.topBar {
		width: 100%;
		height: 50px;
		position: fixed;
		z-index: 5;
		background-color: #efeff4;
}
.scroll {
		padding-top: 30px;
		height: calc(100% - 30px);
		z-index: 1;
}
.footnote {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		min-width: 100%;
		min-height: 50px;
}
.central-text {
		font-size: 30px;
		color: #AAA;
}
