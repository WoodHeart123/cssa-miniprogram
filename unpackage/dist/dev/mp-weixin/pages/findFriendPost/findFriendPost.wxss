
.input-box {
  background-color: #fff;
  border: none;
  border-radius: 0;
  padding: 5px;
  width: 100%;
  box-sizing: border-box;
}
.input-title {
  border-bottom: 1px solid #dddddd;
}
.submit-button {
  background-color: #667aff;
  color: #fff;
  border: none;
  margin-top: 15px;
  border-radius: 4px;
  padding: 10px 20px;
  cursor: pointer;
}
